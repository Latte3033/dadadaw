@{
    ViewData["Title"] = "Home Page";
}

<style>
    .content {
        background-image: url('images/background.jpeg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border: none;
        border-radius: 10px;
    }
</style>

<body>
    <div class="content">
        <div class="flex items-center justify-center h-screen background">
            <div class="text-center bg-white bg-opacity-100 p-8 rounded-lg shadow-lg">
                <h1 class="text-4xl font-extrabold text-blue-600 mb-4">Welcome to Maybe Company</h1>
                <p class="text-lg text-gray-700 mb-6">
                    Your one-stop platform for stock management and insights.
                </p>
                <div class="space-x-4">
                    <a asp-area="" asp-controller="User" asp-action="Register"
                       class="px-6 py-3 bg-blue-600 text-white text-sm font-medium rounded-lg shadow-md hover:bg-blue-700">
                        Get Started
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>