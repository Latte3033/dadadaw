<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rats</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <header>
        <nav class="bg-white shadow-md">
            <div class="container mx-auto flex justify-between items-center p-4">
                <a class="text-2xl font-bold text-black-600" asp-area="" asp-controller="Home" asp-action="Index">
                    Rats
                </a>
                <button id="menuToggle" class="block md:hidden focus:outline-none">
                    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
                <ul id="menu" class="hidden md:flex space-x-4 text-sm font-medium">
                    <li>
                        <a class="text-gray-700 hover:text-black-600" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-black-600" asp-controller="User" asp-action="Register">Register</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-black-600" asp-controller="User" asp-action="Login">Login</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-black-600" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mx-auto px-4 py-8">
        <main role="main" class="bg-white shadow-lg rounded-lg p-6">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800 text-gray-400 mt-8">
        <div class="container mx-auto px-4 py-6 text-center">
            &copy; 2024 - WebStock -
            <a class="text-blue-400 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        document.getElementById('menuToggle').addEventListener('click', () => {
            const menu = document.getElementById('menu');
            menu.classList.toggle('hidden');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
