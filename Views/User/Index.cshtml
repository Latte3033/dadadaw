@model WebStock.Models.User

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
    <!-- Welcome Section -->
    <div class="text-center bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-3xl font-semibold text-gray-800">Welcome, @Model.UserName</h2>
    </div>

    <!-- Buttons Section -->
    <div class="mt-6 flex gap-4">
        <!-- My Email Button -->
        <a href="@Url.Action("EmailList", "User")"
           class="inline-block px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition duration-300">
            My Email
        </a>

        <!-- Log Out Button -->
        <a href="@Url.Action("Logout", "User")"
           class="inline-block px-6 py-3 bg-red-600 text-white rounded-full hover:bg-red-700 transition duration-300">
            Log Out
        </a>
    </div>
</div>

