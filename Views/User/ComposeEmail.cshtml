@model WebStock.Models.EmailDraft

<div class="max-w-7xl mx-auto px-4 py-6">
    <h1 class="text-3xl font-semibold text-gray-800 text-center mb-6">Compose Email</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 text-green-800 p-4 rounded-lg mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <label for="To" class="block text-sm font-medium text-gray-700">To</label>
            <input type="email" id="To" name="To" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required value="@Model.To" />
        </div>

        <div class="mb-4">
            <label for="Subject" class="block text-sm font-medium text-gray-700">Subject</label>
            <input type="text" id="Subject" name="Subject" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required value="@Model.Subject" />
        </div>

        <div class="mb-4">
            <label for="Body" class="block text-sm font-medium text-gray-700">Body</label>
            <textarea id="Body" name="Body" rows="6" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">@Model.Body</textarea>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                Save Email
            </button>
        </div>
    </form>
</div>
