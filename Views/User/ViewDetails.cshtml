@model WebStock.Models.EmailDraft

<div class="max-w-7xl mx-auto px-4 py-6">
    <h1 class="text-3xl font-semibold text-gray-800 text-center mb-6">Email Details</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="mb-4">
            <h2 class="text-lg font-semibold text-gray-700">To</h2>
            <p class="text-gray-900">@Model.To</p>
        </div>

        <div class="mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Subject</h2>
            <p class="text-gray-900">@Model.Subject</p>
        </div>

        <div class="mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Body</h2>
            <p class="text-gray-900">@Model.Body</p>
        </div>

        <div class="mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Status</h2>
            <p class="text-gray-900">@Model.Status</p>
        </div>

        <div class="flex justify-end">
            <a href="@Url.Action("EmailList", "User")" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-black-700">
                Back to Email List
            </a>
        </div>
    </div>
</div>
